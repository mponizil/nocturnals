<!DOCTYPE html>
<html>
<head>
</head>
<body>

<div data-role="header">
  <a id="link-{{back.slug}}" data-icon="arrow-l" class="back">{{back.title}}</a>
  <h1>{{target}}</h1>
</div>

<div data-role="content">
  <h3>{{author.username}}: {{context}}</h3>
  <div id="texts" class="clearfix">
    <h3>Texts</h3>
    {{#texts}}
    <div>
      {{author_name}}: {{body}}
    </div>
    {{/texts}}
    <div>
      <form id="new-text-form">
        <div data-role="fieldcontain" class="ui-field-contain">
          <label for="new-text" class="ui-hidden-accessible">New message</label>
          <input type="text" name="new-text" id="new-text" value="" placeholder="New message" />
          <button type="submit" id="new-text-button">Send</button>
        </div>
      </form>
    </div>
  </div>
  <div id="comments">
    <h3>Comments</h3>
    {{#comments}}
    <div>
      {{author.username}}: {{body}}
    </div>
    {{/comments}}
    <div>
      <form id="new-comment-form">
        <div data-role="fieldcontain" class="ui-field-contain">
          <label for="new-comment" class="ui-hidden-accessible">Post a comment</label>
          <input type="text" name="new-comment" id="new-comment" value="" placeholder="Post a comment" />
          <button type="submit" id="new-comment-button">Post</button>
        </div>
      </form>
    </div>
  </div>
  <div id="council-members">
    <h3>Council Members</h3>
    {{#council_members}}
    <div>
      {{username}}
    </div>
    {{/council_members}}
  </div>
</div>

</body>
</html>