<!DOCTYPE html>
<html>
<head>
</head>
<body>

<div data-role="header" class="header">
  <h1>{{target}}</h1>
  <a id="link-comments" data-icon="arrow-r" class="ui-btn-right">Comments</a>
</div>

<div data-role="content" class="content">
  <h3>{{author.username}}: {{context}}</h3>
  <div id="texts" class="clearfix">
    <h3>Texts</h3>
    {{#texts}}
    <div class="text clearfix">
      <div class="{{#them}}left{{/them}}{{^them}}right{{/them}}">{{author_name}}: {{body}}</div>
    </div>
    {{/texts}}
    <div>
      <form id="new-text-form">
        <div data-role="fieldcontain" class="ui-field-contain">
          <label for="new-text" class="ui-hidden-accessible">New message</label>
          <input type="text" name="new-text" id="new-text" value="" placeholder="New message" />
          <button type="submit" id="new-text-button">Send</button>
        </div>
      </form>
    </div>
  </div>
  <div id="council-members">
    <h3>Council Members</h3>
    <ul data-role="listview">
    {{#council_members}}
      <li data-id="{{id}}">
        <a class="user">{{username}}</a>
        <a title="Remove" class="delete" data-icon="delete"></a>
      </li>
    {{/council_members}}
    </ul>
  </div>
  {{#owner}}
  <div id="owner-tools">
    <button id="add-council-members">Add Council Members</button>
    <button id="delete-conversation">Remove</button>
  </div>
  {{/owner}}
</div>

</body>
</html>