<!DOCTYPE html>
<html>
<head>
</head>
<body>

<div data-role="header" class="header">
  <h1>{{target}}</h1>
  <a id="link-comments" data-icon="arrow-r" class="ui-btn-right">Comments</a>
</div>

<div data-role="content" class="content">
  <div class="info">
    <h3>{{context}}</h3>
    <p>{{author.username}}</p>
  </div>
  <div class="ui-br"></div>
  <div id="texts" class="clearfix">
    {{#texts}}
    <div class="text clearfix" data-id="{{id}}">
      <div class="bubble {{#them}}left{{/them}}{{^them}}right{{/them}} {{gender_class}}">
        {{body}}
      </div>
    </div>
    {{/texts}}
    <div>
      <form id="new-text-form">
        <div data-role="fieldcontain" class="ui-field-contain clearfix">
          <label for="new-text" class="ui-hidden-accessible">New message</label>
          <input type="text" name="new-text" id="new-text" value="" placeholder="New message" />
          <button type="submit" id="new-text-button" data-mini="true">Send</button>
        </div>
      </form>
    </div>
  </div>
  <div id="council-members">
    <h3>Council Members</h3>
    <ul data-role="listview">
      {{#council_members}}
      <li data-id="{{id}}">
        <a class="user">{{username}}</a>
        {{#owner}}<a title="Remove" class="delete" data-icon="delete"></a>{{/owner}}
      </li>
      {{/council_members}}
    </ul>
  </div>
  {{#owner}}
  <div id="owner-tools">
    <button id="add-council-members">Add Council Members</button>
    <button id="import-mode">Import Mode</button>
    <button id="delete-conversation">Remove Conversation</button>
  </div>
  {{/owner}}
</div>

</body>
</html>