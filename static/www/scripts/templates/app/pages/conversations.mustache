<!DOCTYPE html>
<html>
<head>
</head>
<body>

<div data-role="header" class="header">
  <h1>My Conversations</h1>
</div>

<div data-role="content" class="content">
  <ul data-role="listview">
    <li data-role="list-divider">My Conversations</li>
    {{#my_conversations}}
    <li data-id="{{id}}"><a data-id="{{id}}" data-collection="my_conversations">
      <h4>{{target}}</h4>
      <p>{{author.username}}</p>
    </a></li>
    {{/my_conversations}}
    <li data-role="list-divider">My Councils</li>
    {{#my_councils}}
    <li data-id="{{id}}"><a data-id="{{id}}" data-collection="my_councils">
      <h4>{{target}}</h4>
      <p>{{author.username}}</p>
    </a></li>
    {{/my_councils}}
  </ul>
</div>

</body>
</html>