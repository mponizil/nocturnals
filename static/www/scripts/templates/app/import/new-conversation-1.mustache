<!DOCTYPE html>
<html>
<head>
</head>
<body>

<div data-role="header" class="header">
  <h1>{{#target}}{{target}} ({{gender}}){{/target}}{{^target}}Import{{/target}}</h1>
</div>

<div data-role="content" class="content">
  <form id="new-conversation-1-form">
    <div data-role="fieldcontain" class="ui-field-contain">
      <label for="target" class="ui-hidden-accessible">Name</label>
      <input type="text" name="target" id="target" value="{{target}}" placeholder="Target's Name" />
    </div>
    <div class="choose-gender">
      <fieldset data-role="controlgroup" data-type="horizontal">
        <input type="radio" name="gender" id="radio-choice-1" value="Female"{{#female}} checked="checked"{{/female}} />
        <label for="radio-choice-1">F</label>
        <input type="radio" name="gender" id="radio-choice-2" value="Male"{{^female}} checked="checked"{{/female}} />
        <label for="radio-choice-2">M</label>
      </fieldset>
    </div>
    <div data-role="fieldcontain" class="ui-field-contain">
      <button type="submit" id="new-conversation-button" data-theme="g" data-icon="arrow-r">Next</button>
    </div>
  </form>
</div>

</body>
</html>