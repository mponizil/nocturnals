<!DOCTYPE html>
<html>
<head>
</head>
<body>

<div data-role="header" class="header">
  <a id="link-new-conversation-1" data-icon="arrow-l">Back</a>
  <h1>{{target}} ({{gender}})</h1>
</div>

<div data-role="content" class="content">
  <form id="new-conversation-2-form">
    <div data-role="fieldcontain" class="ui-field-contain">
      <label for="context" class="ui-hidden-accessible">Description</label>
      <textarea name="context" id="context" placeholder="Description">{{context}}</textarea>
    </div>
    <div data-role="fieldcontain" class="choose-privacy">
      <select name="public" id="flip-a" data-role="slider">
        <option value="public"{{#public}} selected="selected"{{/public}}>Public</option>
        <option value="private"{{^public}} selected="selected"{{/public}}>Private</option>
      </select>
    </div>
    <div data-role="fieldcontain" class="ui-field-contain">
      <button type="submit" id="create-conversation-button" data-theme="g" data-icon="plus">Create Conversation</button>
    </div>
  </form>
</div>

{{> footer}}

</body>
</html>